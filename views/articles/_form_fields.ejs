<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>"
    type="text" name="title" id="title"
    class="form-control"> <!-- required when submitting -->
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"></textarea><!-- required when submitting -->
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control"></textarea><!-- required when submitting -->
</div>

<a href="/" class="btn btn-secondary">Cancel</a>

<button type="submit" class="btn btn-primary">Save</button> <!-- submit button out of the form-->